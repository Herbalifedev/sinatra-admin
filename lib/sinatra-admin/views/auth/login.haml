!!!
%html{lang: "en-US"}
  %head
    %meta{charset: 'UTF=8'}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{href: "/admin/css/bootstrap.min.css", rel: "stylesheet"}
    %style
      body { padding-top: 60px; }
    %link{href: "/admin/css/bootstrap-responsive.min.css", rel: "stylesheet"}
    %title Sinatra Admin

  %body
    .container
      .row-fluid
        .span12
          .modal-backdrop.fade.in
          .modal
            .modal-header
              %h2.text-center
                Sign in
                %small.muted{style: "margin-left: -5px; font-size: 12px"} SinatraAdmin

            .modal-body
              %form.form-horizontal{method: 'post', action: "/admin/login"}
                = csrf_tag
                %fieldset
                  .control-group
                    %label.control-label{for: "email"} Email
                    .controls
                      %input{id: "email", type: "text", value: params['data'].try(:[], 'email'), name: "data[email]", placeholder: "example@mail.com"}
                  .control-group
                    %label.control-label{for: "password"} Password
                    .controls
                      %input{id: "password", type: "password", value: params['data'].try(:[], 'password'), name: "data[password]", placeholder: "****"}
                  .control-group
                    .controls
                      %span.label.label-important= styled_flash
                  .control-group
                    .controls
                      %button.btn.btn-primary{type: "submit", id: "login"} Login
            .modal-footer
              %span.pull-right.muted= "SinatraAdmin v#{SinatraAdmin::VERSION}"
