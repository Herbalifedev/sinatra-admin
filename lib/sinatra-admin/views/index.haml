.main-menu
  %span We are going to have here links for all registered routes

.actions
  %ul
    %li
      %a{href: "/admin/#{@route}/new"} New

.header
  %h1="#{@model.to_s.pluralize} - Index"

.content
  %table
    %thead
      %tr
        - @model.attribute_names.each do |attr|
          %th= attr
    %tbody
      - @collection.each do |record|
        %tr
          - @model.attribute_names.each do |attr|
            - if attr.eql?('_id')
              %td
                %a{href: "/admin/#{@route}/#{record.send(attr)}"}
                  = record.send(attr)
            - else
              %td
                = record.send(attr)
          %td
            %form{method: 'post', action: "/admin/#{@route}/#{record.id}"}
              %input{name: "_method", type: "hidden", value: "delete"}
              %button{type: "submit", id: "delete"} Delete
